doctype html
head
  title Adventure Game
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
  link(rel='stylesheet', href='../stylesheets/styles.css')
  meta(charset='utf-8')
.container
  // page contaner
  // nav bar
  nav.navbar.navbar-expand-lg.navbar-light.shadow-lg.p-3.mb-5.bg-secondary.rounded.text-light
    a.navbar-brand.text-light(href='#') Amature Dungeon Master
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNavAltMarkup.collapse.navbar-collapse
      .navbar-nav
        a.nav-item.nav-link.active(href='#')
          | Home
          span.sr-only (current)
        a.nav-item.nav-link(href='#') Email
        form.form-inline
          input#cheatCodes.form-control.mr-sm-2(type='search', placeholder='Cheat Codes', aria-label='Search')
          button.btn.btn-outline-success.bg-success.my-2.my-sm-0.text-body(type='submit') Submit
  // /nav bar
  main.container
    // main container
    .row
      .col-4.border
        #playerLevel.h-3 Player Level: 1
        #playerHealth.font-weight-bold Player Health
        #playerDamage Player Attack: 5-10
        #playerAttackBonus Player Accuracy: +5
        #playerAC Player&apos;s Armor Class: 15
        #round Ready to Fight?
        p#goldDisplay Gold
        img#goldImage
        #result  Next Round
      .col-3
        button#fight.btn.btn-danger Fight
        button#healthPotion.btn.btn-primary Health Potion: 3
        button#newFight.btn.btn-light New Fight
        button#run.btn.btn-warning Run Away
        //
          <button id="castle" class="btn btn-primary">Buy the Castle: 500 gold</button>
          <button id="dragon" class="btn btn-danger">The Dragon is Attacking</button>
      .col-5.border
        #enemyHealth.font-weight-bold Enemy Health
        #image.img-thumbnail.img-fluid
        #totalWins Total Wins: 0
        #totalLosses Total Losses: 0
    // item cards
    .row
      .col.m-3
        #sword1.card(style='width: 18rem;')
          img.card-img-top(src= 'images/monsterImg/sword1.jpg', alt='...')
          .card-body
            p.card-text Increase Accuracy
            p.card-text.text-center 30 gold
      .col.m-3
        #sword2.card(style='width: 18rem;')
