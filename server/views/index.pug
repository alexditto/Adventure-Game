      .col.m-3
        #sword3.card(style='width: 18rem;')
          img.card-img-top(src='images/monsterimg/sword3.jpg', alt='...')
          .card-body
            p.card-text Increase Accuracy
            p.card-text.text-center 150 gold
    .row
      .col.m-3
        #armor1.card(style='width: 18rem;')
